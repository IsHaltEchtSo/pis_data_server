{% extends 'components/base.jinja2' %}

{% block content %}

    <h3>Go ahead, create a nice little meditation</h3>

    <form method="POST" action="/meditation/create">
        {{ data.form.csrf_token }}

        <fieldset>
            {{ data.form.name.label }}
            {{ data.form.name }}
            {% for error in data.form.name.errors %}
                {{ error }}                                 {% endfor %}    </fieldset>

        <fieldset>
            {{ data.form.description.label }}
            {{ data.form.description }}
            {% for error in data.form.description.errors %}
                {{ error }}                                 {% endfor %}    </fieldset>

        <div>
            {{ data.form.submit }}  </div>                                                  </form>     {% endblock content %}